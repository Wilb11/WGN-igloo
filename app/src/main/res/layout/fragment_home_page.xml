<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomePage"
    android:layout_margin="10dp"
    android:background="@color/white">


    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/judson"
        android:text="@string/app_name"
        android:textColor="@color/primary_color"
        android:textSize="50dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/add_button"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/add_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/judson"
        android:text="+"
        android:textColor="@color/black"
        android:textSize="40dp"
        android:padding="0dp"
        android:elevation="10dp"
        app:backgroundTint="@color/secondary_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.motion.widget.MotionLayout
        android:id="@+id/motionLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layoutDescription="@xml/fragment_home_page_scene"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/app_name">

        <ImageView
            android:id="@+id/condiments"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/condiments_icon" />

        <View
            android:id="@+id/spacer1"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/dairy"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/dairy_icon" />

        <View
            android:id="@+id/spacer2"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/drinks"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/drinks_icon" />

        <View
            android:id="@+id/spacer3"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/freezer"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/freezer_icon" />

        <View
            android:id="@+id/spacer4"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/meats"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/meats_icon" />

        <View
            android:id="@+id/spacer5"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/produce"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/produce_icon"
            tools:layout_editor_absoluteX="232dp"
            tools:layout_editor_absoluteY="23dp" />

        <View
            android:id="@+id/spacer6"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/miscellaneous"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/miscellaneous_icon"
            tools:layout_editor_absoluteX="276dp"
            tools:layout_editor_absoluteY="23dp" />

        <androidx.constraintlayout.helper.widget.Carousel
            android:id="@+id/carousel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:carousel_backwardTransition="@+id/backward"
            app:carousel_firstView="@+id/condiments"
            app:carousel_forwardTransition="@+id/forward"
            app:carousel_infinite="true"
            app:carousel_nextState="@+id/next"
            app:carousel_previousState="@+id/previous"
            app:constraint_referenced_ids="condiments, spacer1, dairy, spacer2, drinks, spacer3, freezer, spacer4, meats, spacer5, produce, spacer6, miscellaneous"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.motion.widget.MotionLayout>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/inventory_fragment"
        android:name="com.example.wgn_igloo.InventoryDisplayFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/motionLayout"
        tools:layout_editor_absoluteX="0dp" />


</androidx.constraintlayout.widget.ConstraintLayout>