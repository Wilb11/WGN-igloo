<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePage"
    android:background="@color/white"
    android:paddingBottom="10dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:keepScreenOn="true"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="162dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:text="@string/app_name"
            android:textColor="@color/primary_color"
            android:textSize="50dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.motion.widget.MotionLayout
        android:id="@+id/motionLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layoutDescription="@xml/fragment_home_page_scene"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/app_name">

        <ImageView
            android:id="@+id/condiments"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/condiments_icon" />

        <View
            android:id="@+id/spacer1"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/dairy"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/dairy_icon" />

        <View
            android:id="@+id/spacer2"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/drinks"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/drinks_icon" />

        <View
            android:id="@+id/spacer3"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/freezer"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/freezer_icon" />

        <View
            android:id="@+id/spacer4"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/meats"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/meats_icon" />

        <View
            android:id="@+id/spacer5"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/produce"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/produce_icon"
            tools:layout_editor_absoluteX="232dp"
            tools:layout_editor_absoluteY="23dp" />

        <View
            android:id="@+id/spacer6"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/miscellaneous"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/miscellaneous_icon"
            tools:layout_editor_absoluteX="276dp"
            tools:layout_editor_absoluteY="23dp" />

        <androidx.constraintlayout.helper.widget.Carousel
            android:id="@+id/carousel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:carousel_backwardTransition="@+id/backward"
            app:carousel_firstView="@+id/condiments"
            app:carousel_forwardTransition="@+id/forward"
            app:carousel_infinite="true"
            app:carousel_nextState="@+id/next"
            app:carousel_previousState="@+id/previous"
            app:constraint_referenced_ids="condiments, spacer1, dairy, spacer2, drinks, spacer3, freezer, spacer4, meats, spacer5, produce, spacer6, miscellaneous"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.motion.widget.MotionLayout>


        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/inventory_fragment"
            android:name="com.example.wgn_igloo.InventoryDisplayFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/motionLayout"
            tools:layout_editor_absoluteX="0dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <Button
        android:id="@+id/add_button"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:elevation="10dp"
        android:padding="0dp"
        android:text="+"
        android:textColor="@color/white"
        android:textSize="50dp"
        app:backgroundTint="@color/primary_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.975" />

</androidx.constraintlayout.widget.ConstraintLayout>