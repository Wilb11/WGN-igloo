<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Line at the top -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#D3D3D3"/> <!-- This color is for the line, change as needed -->
            <size android:height="1dp"/>
        </shape>
    </item>
    <!-- Background color -->
    <item android:top="1dp"> <!-- This pushes the background below the line -->
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/>
        </shape>
    </item>
</layer-list>